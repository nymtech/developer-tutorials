{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "es6"
    ],
    "module": "ES6",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noEmit": true,
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src"
  ]
}